<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#E1CED5">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/viet">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_newgame"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="New Game"
                android:lines="1"
                android:padding="10dp"
                android:layout_gravity="center">
            </Button>
            <Button
                android:id="@+id/btn_continuegame"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Continue Game"
                android:lines="1"
                android:padding="10dp"
                android:layout_gravity="center">
            </Button>
            <Button
                android:id="@+id/btn_helpgame"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Help game"
                android:lines="1"
                android:padding="10dp"
                android:layout_gravity="center">
            </Button>
            <Button
                android:id="@+id/btn_quickgame"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Quick game"
                android:lines="1"
                android:padding="10dp"
                android:layout_gravity="center">
            </Button>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>