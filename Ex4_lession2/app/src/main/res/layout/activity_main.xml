<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#A0DAE1"
        >



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Contact activity">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:labelFor="@+id/i_name"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/i_name"
                    android:inputType="textPersonName"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:labelFor="@+id/i_email"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/i_email"
                    android:inputType="textEmailAddress"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Project"
                    android:labelFor="@+id/i_project"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/i_project"
                    android:inputType="text"/>
            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="View contact information"
                android:textAlignment="center"
                android:id="@+id/submit"
                android:layout_gravity="center"
                ></Button>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>